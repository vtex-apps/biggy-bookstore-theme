{
  "header": {
    "blocks": ["header-layout.desktop", "header-layout.mobile"]
  },
  "header.full": {
    "blocks": ["header-layout.desktop", "header-layout.mobile"]
  },
  "header-layout.desktop": {
    "children": ["header-row#1-desktop", "header-row#2-desktop"]
  },
  "header-row#1-desktop": {
    "children": [
      "logo#desktop",
      "search-bar",
      "locale-switcher",
      "login",
      "minicart"
    ],
    "props": {
      "sticky": true,
      "blockClass": "main-header"
    }
  },
  "header-row#2-desktop": {
    "children": ["drawer", "vtex.menu@2.x:menu#category-menu"],
    "props": {
      "sticky": true,
      "blockClass": "secondary-header"
    }
  },
  "logo#desktop": {
    "props": {
      "title": "Logo",
      "href": "/",
      "url": "https://storecomponents.vteximg.com.br/arquivos/store-theme-logo.png",
      "width": "180"
    }
  },

  "minicart": {
    "blocks": ["product-summary"],
    "props": {
      "type": "popup",
      "showRemoveButton": true,
      "showDiscount": true,
      "showSku": true,
      "labelMiniCartEmpty": "Your cart is empty :(",
      "labelButtonFinishShopping": "Go to checkout",
      "enableQuantitySelector": true,
      "maxQuantity": 10,
      "labelClasses": "gray",
      "blockClass": "minicart-icon"
    }
  },

  "header-layout.mobile": { 
    "children": ["header-row#1-mobile", "header-row#2-mobile"]
  },
  "header-row#1-mobile": {
    "children": ["drawer", "logo#mobile", "minicart"],
    "props": {
      "sticky": true,
      "blockClass": "main-header-mobile"
    }
  },
  "header-row#2-mobile": {
    "children": ["search-bar"],
    "props": {
      "sticky": true,
      "blockClass": "input-header-mobile",
      "paddingTop": 0
    }
  },
  "drawer": {
    "children": ["flex-layout.row#drawer"],
    "props": {
      "blockClass": "drawer-icon"
    }
  },

  "flex-layout.row#drawer": {
    "children": [
      "flex-layout.col#drawer"
    ]
  },

  "flex-layout.col#drawer": {
    "children": [
      "rich-text#drawer-head",
      "menu#drawer"
    ]
  },

  "rich-text#drawer-head": {
    "props" : {
      "text": "Categories"
    }
  },

  "menu#drawer": {
    "children": ["menu-item#category-drawer1", "menu-item#category-drawer2", "menu-item#category-drawer3", "menu-item#category-drawer4", "menu-item#category-drawer5"],
    "props": {
      "orientation": "vertical"
    }
  },

  "menu-item#category-drawer1": {
    "props": {
      "id": "menu-item-category-decoration",
      "type": "custom",
      "highlight": false,
      "itemProps": {
        "type": "internal",
        "href": "#",
        "noFollow": true,
        "tagTitle": "History",
        "text": "History"
      }
    }
  },
  "menu-item#category-drawer2": {
    "props": {
      "id": "menu-item-category-decoration",
      "type": "custom",
      "highlight": false,
      "itemProps": {
        "type": "internal",
        "href": "#",
        "noFollow": true,
        "tagTitle": "Romance",
        "text": "Romance"
      }
    }
  },
  "menu-item#category-drawer3": {
    "props": {
      "id": "menu-item-category-decoration",
      "type": "custom",
      "highlight": false,
      "itemProps": {
        "type": "internal",
        "href": "#",
        "noFollow": true,
        "tagTitle": "Business",
        "text": "Business"
      }
    }
  },
  "menu-item#category-drawer4": {
    "props": {
      "id": "menu-item-category-decoration",
      "type": "custom",
      "highlight": false,
      "itemProps": {
        "type": "internal",
        "href": "#",
        "noFollow": true,
        "tagTitle": "Art",
        "text": "Art"
      }
    }
  },
  "menu-item#category-drawer5": {
    "props": {
      "id": "menu-item-category-decoration",
      "type": "custom",
      "highlight": false,
      "itemProps": {
        "type": "internal",
        "href": "#",
        "noFollow": true,
        "tagTitle": "Biographie",
        "text": "Biographie"
      }
    }
  },

  "logo#mobile": {
    "props": {
      "title": "Logo",
      "href": "/",
      "url": "https://storecomponents.vteximg.com.br/arquivos/store-theme-logo-mobile.png",
      "width": "70"
    }
  }
}
