{
  "footer": {
    "blocks": ["footer-layout.desktop", "footer-layout.mobile"]
  },
  "footer-layout.desktop": {
    "children": ["flex-layout.row#newsletter-footer", "flex-layout.row#main-footer"]
  },
  "flex-layout.row#newsletter-footer": {
    "props": {
      "fullWidth": true
    },
    "children": ["flex-layout.col#footer-1-desktop-1"]
  },
  "flex-layout.row#main-footer": {
    "children": ["flex-layout.col#footer-1", "flex-layout.col#footer-2"]
  },
  "flex-layout.col#footer-2": {
    "children": ["accepted-payment-methods", "flex-layout.row#footer-1-desktop"]
  },
  "flex-layout.col#footer-1": {
    "children": ["social-networks", "flex-layout.row#footer-2-desktop"]
  },
  "flex-layout.col#footer-1-desktop-1": {
    "children": ["newsletter"]
  },
  "flex-layout.col#footer-1-desktop-2": {
    "children": ["social-networks"]
  },
  "social-networks": {
    "props": {
      "socialNetworks": [
        {
          "name": "Facebook",
          "url": "https://www.facebook.com/vtexonline/"
        },
        {
          "name": "Instagram",
          "url": "https://www.instagram.com/vtextruecloud/"
        },
        {
          "name": "Twitter",
          "url": "https://twitter.com/vtexonline"
        },
        {
          "name": "Youtube",
          "url": "https://www.youtube.com/user/VTEXTV"
        }
      ]
    }
  },
  "accepted-payment-methods": {
    "props": {
      "paymentMethods": ["MasterCard", "Visa", "Diners Club"]
    }
  },
  "flex-layout.row#footer-2-desktop": {
    "children": ["vtex.menu@2.x:menu#About"],
    "props": {
      "paddingTop": 4,
      "paddingBottom": 4
    }
  },
  "flex-layout.row#footer-1-desktop": {
    "children": ["vtex.menu@2.x:menu#About-2"],
    "props": {
      "paddingTop": 4,
      "paddingBottom": 4
    }
  },
  "flex-layout.row#footer-3-desktop": {
    "children": ["rich-text#footer"],
    "props": {
      "blockClass": "credits"
    }
  },
  "rich-text#footer": {
    "props": {
      "text": "X, todos os direitos reservados.",
      "blockClass": "footer"
    }
  },

  "footer-layout.mobile": {
    "children": [
      "newsletter",
      "flex-layout.row#1-footer-mobile",
      "flex-layout.row#2-footer-mobile",
      "flex-layout.row#3-footer-mobile"
    ]
  },
  "flex-layout.row#1-footer-mobile": {
    "children": [
      "flex-layout.col#footer-1-mobile-1",
      "flex-layout.col#footer-1-mobile-2"
    ],
    "props": {
      "paddingTop": 6,
      "paddingBottom": 4,
      "preserveLayoutOnMobile": true
    }
  },
  "flex-layout.col#footer-1-mobile-1": {
    "children": ["social-networks"]
  },
  "flex-layout.col#footer-1-mobile-2": {
    "children": ["accepted-payment-methods"],
    "props": {
      "blockClass": "payment-methods"
    }
  },
  "flex-layout.row#2-footer-mobile": {
    "props": {
      "paddingTop": 4,
      "paddingBottom": 4
    },
    "children": ["vtex.menu@2.x:menu#About"]
  },
  "flex-layout.row#3-footer-mobile": {
    "props": {
      "text": "All stock and product photos are from photos.icons8.com =)",
      "blockClass": "footer",
      "paddingTop": 4
    },
    "children": ["rich-text#footer"]
  }
}
